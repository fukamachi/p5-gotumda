{namespace got.tmpl.task}

/**
 * @param id
 * @param user_name
 * @param owner_name
 * @param body
 * @param owner_image_url
 * @param user_thumbnail_url
 */
{template .render}
<div id="{$id}" class="got-taskitem">
  <div class="profile-image">
    <img class="got-taskitem-owner" src="{$owner_image_url}" />
  </div>
  {if $owner_name != $user_name}
    <img class="got-taskitem-user" src="{$user_thumbnail_url}" />
  {/if}
  <div class="got-taskitem-owner">
    {if $owner_name != $user_name}
      {$user_name} =>
    {/if}
    {$owner_name}
  </div>
  <div class="got-taskitem-body">
    {$body|noAutoescape}
  </div>
  <div class="got-taskitem-data"></div>
  <div class="got-taskitem-action">
    <a class="button"><img src="/static/img/copy.png" /></a>
    <a class="button"><img src="/static/img/get.png" /></a>
  </div>
</div>
{/template}

/**
 * @param id
 * @param body
 * @param is_done
 * @param user_thumbnail_url
 */
{template .renderLine}
<div id="{$id}" class="got-taskitemline">
  <input class="got-taskitem-done" type="checkbox"{if $is_done} checked="true"{/if} />
  <div class="got-taskitem-body">
    <img src="{$user_thumbnail_url}" />
    {$body}
  </div>
</div>
{/template}
